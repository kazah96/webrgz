 @model List<Good>
     @{
         int inLine = 2;
     }


    <html>
    <head>
    </head>
    <body>
   


        <div class="container">
            <div class="row">
               
                <div class="col-sm-12">
                       @for(int i=0;i<Model.Count();i+=inLine)
                       {
                           <div class="card-deck">
                           @for(int j=0;j<inLine && j+i<Model.Count();j++)
                           {
                               @Html.Partial("ProductSummary", @Model[j+i]);
                           }
                        
                           </div>
                           
                       }


                </div>
            </div>
    </body>

    </html>