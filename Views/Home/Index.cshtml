 @model List<Good>
     @{
         int inLine = 3;
     }


    <html>
    <head> 
    </head>
    <body id="container">
        <div class="container" >
            <div class="row">
               
               <div class="col-sm-2">

                      @await Component.InvokeAsync("NavigationMenu")               
                  
                </ul>

               </div>
                <div class="col-sm-10">
                    @if(Model.Count>0)
                    {
                       @for(int i=0;i<Model.Count();i+=inLine)
                       {
                           <div class="card-deck">
                           @for(int j=0;j<inLine && j+i<Model.Count();j++)
                           {
                               @Html.Partial("ProductSummary", @Model[j+i]);
                           }
                        
                           </div>
                           
                       }
                    }
                    else{
                        <h2>Таких нету</h2>
                    }


                </div>
            </div>
    </body>


    </html>