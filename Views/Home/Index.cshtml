 @model List<Good>
     @{
         int inLine = 3;
     }

                <div class="row">
               <div class="col-lg-1">

                      @await Component.InvokeAsync("NavigationMenu")               
                  
                </ul>

               </div>
                <div class="col-lg-10" id="cards">
                    @if(Model.Count>0)
                    {
                       @for(int i=0;i<Model.Count();i+=inLine)
                       {
                           <div class="card-deck">
                           @for(int j=0;j<inLine && j+i<Model.Count();j++)
                           {
                               @Html.Partial("ProductSummary", @Model[j+i]);
                           }
                        
                           </div>
                           
                       }
                    }
                    else{
                        <h2>Таких нету</h2>
                    }


                </div>
       </div>
    
  