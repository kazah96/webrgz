@model Cart

<h2>Корзина</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Товар</th>            
            <th>Количество</th>
            <th class="text-right">Цена</th>
            <th class="text-right">Итог</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Lines) {
        <tr>
            <td class="text-left">@line.Good.Name</td>
            <td class="text-center">@line.Quantity</td>
            <td class="text-right">@line.Good.Price.ToString("c")</td>
            <td class="text-right">
                @((line.Quantity * line.Good.Price).ToString("c"))
            </td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Итог:</td>
            <td class="text-right">
                @Model.ComputeTotalValue().ToString("c")
            </td>
        </tr>
    </tfoot>
</table>

<div class="col-sm-12"><a asp-controller="Checkout" asp-action="Index">Checkout</a></div>
