@model Client



    <form asp-action="Credintals" asp-controller="Checkout">
  <div class="form-group">
    <div asp-validation-summary=" All" class="text-danger"></div>
    <label asp-for="Email">Email адрес</label>
    <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp" placeholder="Enter email">
  </div>
  <div class="form-group">
    <label>Имя</label>
    <input class="form-control" placeholder="Введите Имя" asp-for="Name" type="text">
</div>
<div class="form-group">
    <label>Адрес доставки</label>
    <input class="form-control" placeholder="Адрес доставки" asp-for="Adress" type="text">
</div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
